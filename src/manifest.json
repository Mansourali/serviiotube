{
  "name": "ServiioTube",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Manage video subscriptions for you tube on serviio",
  
  
  "page_action": {
    "default_icon": "images/icon.png", // optional
    "default_title": "ServiioTube"    // optional; shown in tooltip
  },
  "web_accessible_resources": [
    "images/icon.png",
	"images/icon.add.png",
	"images/icon.remove.png",
	"images/icon.refresh.png"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.youtube.com/view_all_playlists"],
      "js": ["scripts/thirdparty/jquery.min.js","scripts/contentscript.js"]
    }
  ],
  "permissions": [
    "http://www.youtube.com/*",	"http://*/" , "tabs" 
  ],
  "background": {
    "scripts": [ "scripts/thirdparty/json2.js", "scripts/thirdparty/jquery.min.js","scripts/serviioApi.js", "scripts/thirdparty/fancy-settings/lib/store.js", "scripts/background.js"]
  },
  "options_page": "settings.html"
}